{
   point P1 = point();
    P1.setX(10);
    P1.setY(23.43);

    cout << "X: " << P1.getX() << " Y: " << P1.getY() << endl;
    P1.moveVec(14.74, -12.18);
    cout << "X: " << P1.getX() << " Y: " << P1.getY() << endl;

     point P2(7.41, -41.4);


     P1.movePoint(P2);
   cout << "X: " << P1.getX() << " Y: " << P1.getY() << endl;

   float dist = distance(P1, P2);
